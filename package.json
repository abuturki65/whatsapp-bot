    "@types/node": "^24.0.15",
    "@types/qrcode": "^1.5.5",
    "acorn": "latest",
    "dotenv": "^17.2.0",
    "dprint": "^0.50.1",
    "eslint": "^9.31.0",
    "husky": "^9.1.7",
    "resolve-tspaths": "^0.8.23",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0"
  },
  "dependencies": {
    "@hapi/boom": "^10.0.1",
